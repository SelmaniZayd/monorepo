# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build server-api`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t server-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system server-api && \
          adduser --system -G server-api server-api

COPY dist/apps/server-api server-api/
RUN chown -R server-api:server-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix server-api --omit=dev -f install

CMD [ "node", "server-api" ]
